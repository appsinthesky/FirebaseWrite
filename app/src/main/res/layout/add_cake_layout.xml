<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/add_cake_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        android:hint="name"
        tools:ignore="HardcodedText" />


    <EditText
        android:id="@+id/add_cake_date_baked"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_cake_name"
        android:layout_marginTop="12dp"
        android:hint="Date Baked"
        tools:ignore="HardcodedText,TextFields" />


    <EditText
        android:id="@+id/add_cake_expiry_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_cake_date_baked"
        android:layout_marginTop="12dp"
        android:hint="Expiry Date"
        tools:ignore="HardcodedText,TextFields"
        />

    <Button
        android:id="@+id/add_cake_save"
        android:layout_width="0dp"
        android:layout_margin="12dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Save"
        tools:ignore="HardcodedText" />


</android.support.constraint.ConstraintLayout>